{
  "name": "quill-next-monorepo",
  "version": "2.0.3",
  "description": "Quill development environment",
  "private": true,
  "author": "Vincent Chan <okcdz@diverse.space>",
  "contributors": [
    "Jason Chen <jhchen7@gmail.com>"
  ],
  "homepage": "https://quilljs.com",
  "config": {
    "ports": {
      "webpack": "9080",
      "website": "9000"
    }
  },
  "pnpm": {
    "overrides": {
      "playwright": "1.49.0"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vincentdchan/quill-next"
  },
  "bugs": {
    "url": "https://github.com/vincentdchan/quill-next/issues"
  },
  "scripts": {
    "build": "pnpm -r build",
    "build:quill": "pnpm --filter quill-next run build",
    "build:website": "pnpm run --filter website build",
    "start": "run-p start:*",
    "start:quill": "pnpm start -w quill",
    "start:website": "NEXT_PUBLIC_LOCAL_QUILL=false npm start -w website",
    "lint": "pnpm -r run lint"
  },
  "keywords": [
    "quill",
    "editor",
    "rich text",
    "wysiwyg",
    "operational transformation",
    "ot",
    "framework"
  ],
  "engines": {
    "npm": ">=8.2.3"
  },
  "engineStrict": true,
  "devDependencies": {
    "execa": "^9.0.2",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "next": "^14.0.4"
  }
}
